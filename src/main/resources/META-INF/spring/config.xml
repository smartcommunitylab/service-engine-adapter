	</bean>

	<!-- ServiceDataChangeNotify -->
	<camel:camelContext xmlns="http://camel.apache.org/schema/spring">
		<route>
			<from uri="jms:queue:ServiceDataChangeNotifyQueue?mapJmsMessage=false&amp;messageConverter=#convertMessage&amp;selector=subscriberId&lt;&gt;'it.sayservice.domain_changes'" />
			<to uri="bean:bridgeServiceDataChangeNotifyMessage?method=forwardMessageInOnly" pattern="InOnly" />
		</route>
	</camel:camelContext>
	<bean id="bridgeServiceDataChangeNotifyMessage" class="eu.trentorise.smartcampus.smx.converter.JMSMessageBridge">
		<property name="serviceEndpoint" value="activemq:queue:ServiceDataChangeNotifyQueue?mapJmsMessage=false&amp;messageConverter=#convertMessage" />
	</bean>		

	<!-- DomainObjectEventSubscribe -->
